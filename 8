#include <stdio.h> 
#include <mpi.h> 
 
int main(int argc, char** argv) {
    int rank, size; 
    int send_data[4] = {10, 20, 30, 40};
    int recv_data; 
 
    MPI_Init(&argc, &argv);                          // Initialize MPI environment 
    MPI_Comm_rank(MPI_COMM_WORLD, &rank);            // Get rank of 
the process 
    MPI_Comm_size(MPI_COMM_WORLD, &size);            // Get number of 
processes 
 
    // Scatter: send one element of send_data from root to each process 
    MPI_Scatter(send_data, 1, MPI_INT, &recv_data, 1, MPI_INT, 0, 
MPI_COMM_WORLD); 
    printf("Process %d received: %d\n", rank, recv_data); 
  
 
 
    // Modify received data 
    recv_data += 1; 
 
    // Gather: collect data from all processes into send_data on root 
    MPI_Gather(&recv_data, 1, MPI_INT, send_data, 1, MPI_INT, 0, 
MPI_COMM_WORLD); 
 
    if (rank == 0) { 
        printf("Gathered data: "); 
        for (int i = 0; i < size; i++) 
            printf("%d ", send_data[i]);
        printf("\n"); 
    } 
 
    MPI_Finalize();                                  // Finalize MPI 
    return 0; 
}
